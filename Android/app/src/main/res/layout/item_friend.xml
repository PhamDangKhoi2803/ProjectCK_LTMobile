<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Avatar -->
    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_avatar"
        android:background="@drawable/avatar_circle_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tên người dùng"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/user_avatar"
        app:layout_constraintTop_toTopOf="@id/user_avatar"
        app:layout_constraintBottom_toBottomOf="@id/user_avatar"
        app:layout_constraintEnd_toStartOf="@id/btn_accept"
        app:layout_constraintHorizontal_bias="0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_accept"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:minWidth="64dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Chấp nhận"
        android:textColor="#0D47A1"
        android:textSize="12sp"
        android:visibility="gone"
        app:backgroundTint="#E3F2FD"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_reject"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_reject"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:minWidth="64dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Từ chối"
        android:textColor="#000000"
        android:textSize="12sp"
        android:visibility="gone"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#BDBDBD"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_withdraw"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:minWidth="64dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Thu hồi"
        android:textColor="#D32F2F"
        android:textSize="12sp"
        android:visibility="gone"
        app:backgroundTint="#FFEBEE"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_friend"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:minWidth="64dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Kết bạn"
        android:textColor="#0D47A1"
        android:textSize="12sp"
        android:visibility="gone"
        app:backgroundTint="#E3F2FD"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_message"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:minWidth="64dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Nhắn tin"
        android:textColor="#0D47A1"
        android:textSize="12sp"
        android:visibility="gone"
        app:backgroundTint="#E3F2FD"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_unfriend"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_unfriend"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:minWidth="64dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Hủy kết bạn"
        android:textColor="#D32F2F"
        android:textSize="12sp"
        android:visibility="gone"
        app:backgroundTint="#FFEBEE"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>